
<div class="row">
  <div class="col s4">
   
  </div>
  <div class="col s4">
    <div class="center-align">
      <img src="https://image.ibb.co/nifV4S/logo.png" alt="logo" height="75%" width="75%">
    </div>
  </div>
  <div class = "col s4">
    <div class = "right-align">
    </div>
  </div>
</div>
<div class="row">
  
  <div class="col s4">
    <h4>Order Here!</h4>
    <form class="create-update-form" action="/" method="POST">

     <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>

     <div class="form-group">
        <label for="devoured"></label>
     </div>

     <button type="submit">Place Order</button>
    </form>
  </div>
  <div class="col s4">
    <div class="center-align">
      <h4>Your order is ready!</h4>

      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

             <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Pickup Order</button>
              </form>
            </li>
            <br>
          {{/unless}}
        {{/each}}
      </ul>
    </div> 
  </div>
  <div class="col s4">
    <div class="right-align">
      <h4>Burgers Eaten!</h4>

      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}

             <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">Still Hungry? Have another</button>
              </form>
            </li>
            <br>
          {{/if}}
        {{/each}} 
      </ul>
    </div>
  </div>
</div>